<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AboutUs"
    android:background="@color/xamnhat">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/appbackground">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/chongchong"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:lottie_rawRes="@raw/thanks"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thank you for here now!"
                android:gravity="center"
                android:fontFamily="@font/dancing_scrift"
                android:textSize="29sp"
                android:padding="5dp"
                android:layout_marginTop="20dp"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/bucthu"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/chongchong"
                android:src="@drawable/email_close"
                android:scaleType="centerCrop"
                android:background="@drawable/tran_btn_no_solid"
                android:layout_marginTop="15dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/thu"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_above="@+id/bucthu"
                android:visibility="invisible"
                app:cardCornerRadius="9dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/t69"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nếu có gì thắc mắc hoặc góp ý, xin vui lòng liên hệ:"
                        android:fontFamily="@font/sf_semi_bold"
                        android:layout_margin="10dp"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="nguyenhailuan609@gmail.com"
                        android:fontFamily="@font/sf_semi_bold"
                        android:gravity="center"
                        android:layout_below="@+id/t69"
                        android:textSize="16sp"
                        android:textColor="@color/xanhdam"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>






        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>