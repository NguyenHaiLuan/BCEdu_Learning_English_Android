<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground"
    tools:context=".Activities.Admin.Admin_TuVungTheoCapDo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sf_bold"
        android:gravity="center_horizontal"
        android:text="Từ vựng (Admin)"
        android:textAllCaps="true"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/back_TV_ADMIN"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/tranpr"
        android:src="@drawable/baseline_arrow_back_ios_new_24" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_tuvung_admin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/them_tu_vung_admin"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/them_tu_vung_admin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/tran_btn_no_solid"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_add_24" />

</RelativeLayout>