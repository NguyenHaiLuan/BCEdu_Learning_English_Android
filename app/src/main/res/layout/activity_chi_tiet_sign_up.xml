<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.NguoiDung.ChiTietSignUp">

    <TextView
        android:id="@+id/wellcomeTextCTDK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:fontFamily="@font/sf_semi_bold"
        android:gravity="center"
        android:text="Chi tiết đăng kí"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avtCTDK"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@+id/wellcomeTextCTDK"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/circle"
        app:srcCompat="@drawable/ic_photo_camera_black_48dp"
        android:tint="@color/xanhdam"/>

    <LinearLayout
        android:id="@+id/khoiEditPhotoCTDK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_below="@id/avtCTDK">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/sf_semi_bold"
            android:text="Hình ảnh của bạn"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/avtCTDKtext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/custom_edittext"
            android:fontFamily="@font/sf_regular"
            android:enabled="false"
            android:hint="Nhấn vào hình để chọn hình"
            android:paddingLeft="16dp"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_above="@+id/confirmBtnCTDK"
            android:layout_below="@id/khoiEditPhotoCTDK"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textLayRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:fontFamily="@font/sf_semi_bold"
                    android:text="Bạn là...."
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/vaiTroSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/custom_edittext"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:fontFamily="@font/sf_semi_bold"
                    android:text="Số điện thoại"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/sdtCTDK"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/custom_edittext"
                    android:fontFamily="@font/sf_regular"
                    android:inputType="phone"
                    android:hint="Số điện thoại của bạn là..."
                    android:paddingLeft="16dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:fontFamily="@font/sf_semi_bold"
                    android:text="Ngày sinh"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="5dp">

                    <ImageView
                        android:id="@+id/pickDateCTDK"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/baseline_edit_calendar_24"
                        android:background="@drawable/tran_btn_no_solid"
                        android:layout_gravity="center_vertical"/>

                    <EditText
                        android:id="@+id/ngaySinhCTDK"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/custom_edittext"
                        android:fontFamily="@font/sf_regular"
                        android:hint="Ngày sinh của bạn"
                        android:enabled="false"
                        android:paddingLeft="16dp"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:fontFamily="@font/sf_semi_bold"
                    android:text="Giới tính"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/gioiTinhSpinnerCTDK"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/custom_edittext" />
            </LinearLayout>



        </LinearLayout>

    <Button
        android:id="@+id/confirmBtnCTDK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/xanhnhathon"
        android:text="Xác nhận"
        android:textAllCaps="true"
        android:textColor="@color/xanhdam" />

</RelativeLayout>