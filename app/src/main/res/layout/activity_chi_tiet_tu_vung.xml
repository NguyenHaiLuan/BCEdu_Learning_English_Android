<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.TuVung.ChiTietTuVung"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/text_capdotuvung"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:text="Try your best!"
        android:textColor="@color/xanhdam"
        android:gravity="center"
        android:textSize="27sp"
        android:fontFamily="@font/exo2_bold"
        android:background="@drawable/appbackground"/>

    <RelativeLayout
        android:id="@+id/layoutTuVung"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_capdotuvung">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewHinhTuVung"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:cardCornerRadius="20dp"
            android:background="@drawable/tranpr"
            app:cardElevation="20dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/anhMinhHoaTuVung"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/top_background_main"
                android:scaleType="fitXY"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tuVungChiTiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardViewHinhTuVung"
            android:text="Từ vựng"
            android:gravity="center"
            android:textSize="30sp"
            android:padding="10dp"
            android:fontFamily="@font/exo2_bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/xanhdam"/>

        <com.wajahatkarim3.easyflipview.EasyFlipView
            android:id="@+id/flipTuVung"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/tuVungChiTiet"
            android:layout_marginBottom="10dp"
            app:flipOnTouch="true"
            app:flipDuration="500"
            app:flipEnabled="true">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:background="@drawable/tranpr">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nghiaTuVungChiTiet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Xin chào thế giới"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:fontFamily="@font/exo2_bold"
                        android:gravity="center"
                        android:background="@color/xanhnhathon"/>

                    <TextView
                        android:id="@+id/viDuTuVung"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hello World!"
                        android:paddingTop="15dp"
                        android:paddingLeft="20dp"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:fontFamily="@font/exo2"
                        android:background="@color/xanhnhat"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewFront"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="5dp"
                app:cardCornerRadius="20dp"
                android:background="@drawable/tranpr">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tuLoaiTuVung"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:text="(N)"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:fontFamily="@font/exo2"
                        android:gravity="center"
                        android:background="@color/xanhnhathon"/>

                    <TextView
                        android:id="@+id/PhienAmTuVung"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:text="Helou"
                        android:paddingTop="15dp"
                        android:paddingLeft="20dp"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:fontFamily="@font/exo2"
                        android:background="@color/xanhnhat"
                        android:gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </com.wajahatkarim3.easyflipview.EasyFlipView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@drawable/appbackground">

            <ImageButton
                android:id="@+id/troLaiListTuVung"
                android:src="@drawable/baseline_format_list_bulleted_24"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tranpr"/>

            <ImageButton
                android:src="@drawable/baseline_star_border_24"
                android:id="@+id/kiemTraTuVung"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tranpr"/>

            <ImageButton
                android:src="@drawable/baseline_chevron_left_24"
                android:id="@+id/tuVungTruoc"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tranpr"/>

            <ImageButton
                android:src="@drawable/baseline_volume_up_24"
                android:id="@+id/phatAmRaLoa"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tranpr"/>

            <ImageButton
                android:src="@drawable/baseline_chevron_right_24"
                android:id="@+id/tuVungKeTiep"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tranpr"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>