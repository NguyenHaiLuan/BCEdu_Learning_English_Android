<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground"
    tools:context=".Activities.KiemTra.ChinhSuaBaiKiemTra">

    <TextView
        android:id="@+id/titleTKH"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:fontFamily="@font/sf_semi_bold"
        android:gravity="center"
        android:text="Chỉnh sửa"
        android:textSize="28sp" />

    <ImageButton
        android:id="@+id/backBtn_CSBKT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/tranpr"
        android:src="@drawable/baseline_arrow_back_ios_new_24" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/pickAnhbaiKT_CSBKT"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/titleTKH"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/supermanavt"
        app:shapeAppearanceOverlay="@style/circular" />

    <EditText
        android:id="@+id/linkAvtBaiKiemTra_CSBKT"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/pickAnhbaiKT_CSBKT"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_edittext"
        android:drawableLeft="@drawable/baseline_photo_24"
        android:drawablePadding="8dp"
        android:drawableTint="@color/xanhdam"
        android:enabled="false"
        android:hint="Link ảnh"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/cardview_dark_background"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/tenBaiKiemTra_CSBKT"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linkAvtBaiKiemTra_CSBKT"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_edittext"
        android:drawableLeft="@drawable/baseline_star_border_24"
        android:drawablePadding="8dp"
        android:drawableTint="@color/xanhdam"
        android:hint="Tên khoá học"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/cardview_dark_background"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/thoiLuongBaiKiemTra_CSBKT"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tenBaiKiemTra_CSBKT"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_edittext"
        android:drawableLeft="@drawable/ic_timer"
        android:drawablePadding="8dp"
        android:drawableTint="@color/xanhdam"
        android:hint="Thời lượng"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/cardview_dark_background"
        android:textSize="16sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/editBaiKiemtra_CSBKT"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tran_btn_solid"
            android:text="Xong"
            android:layout_marginRight="20dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/quanLyBaiKiemTra"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tran_btn_solid"
            android:text="Bài Kiểm tra"
            android:layout_marginRight="20dp"
            android:textColor="@color/black" />


    </LinearLayout>


</RelativeLayout>