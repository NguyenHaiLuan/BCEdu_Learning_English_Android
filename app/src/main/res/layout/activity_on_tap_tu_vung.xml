<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.TuVung.OnTapTuVung">

    <View
        android:id="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view5"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/rounded_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtquestcountTN" />

    <TextView
        android:id="@+id/txtDiemTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:drawableRight="@android:drawable/ic_menu_myplaces"
        android:drawablePadding="10dp"
        android:fontFamily="@font/exo2_bold"
        android:text="Score: 0"
        android:textColor="@color/vang"
        android:textSize="20sp"
        app:drawableTint="@color/vang"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/txtquestcountTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/ic_question"
        android:drawablePadding="10dp"
        android:fontFamily="@font/exo2"
        android:text="Question: 1/x"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        app:drawableTint="@color/teal_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txttimeTN"></TextView>

    <TextView
        android:id="@+id/txttimeTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_timer"
        android:drawablePadding="10dp"
        android:fontFamily="@font/exo2_bold"
        android:text="30:00"
        android:textColor="@color/xanhduong"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/txtquestionTN"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:fontFamily="@font/exo2_bold"
        android:gravity="center_horizontal"
        android:text="Who invented android studio?"
        android:textColor="#2196F3"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="@+id/view5"
        app:layout_constraintStart_toStartOf="@+id/view5"
        app:layout_constraintTop_toTopOf="@+id/view5"></TextView>

    <TextView
        android:id="@+id/tuLoaiOnTap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:background="@drawable/tran_btn_no_solid"
        android:fontFamily="@font/exo2_bold"
        android:padding="5dp"
        android:text="Từ loại"
        android:textColor="@color/teal_700"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/phienAmOnTap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:background="@drawable/tran_btn_no_solid"
        android:fontFamily="@font/exo2_bold"
        android:padding="5dp"
        android:text="/helow/"
        android:textColor="@color/lavender"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/loabtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/tran_btn_no_solid"
        android:padding="5dp"
        android:src="@drawable/baseline_volume_up_24"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/xanhdam" />

    <RadioGroup
        android:id="@+id/radiochoices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/view5"
        app:layout_constraintTop_toBottomOf="@+id/view5">

        <RadioButton
            android:id="@+id/op1"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/exo2"
            android:text="Option 1"
            android:textColor="@color/black"
            android:textSize="17sp"></RadioButton>

        <RadioButton
            android:id="@+id/op2"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/exo2"
            android:text="Option 2"
            android:textColor="@color/black"
            android:textSize="17sp"></RadioButton>

        <RadioButton
            android:id="@+id/op3"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/exo2"
            android:text="Option 3"
            android:textColor="@color/black"
            android:textSize="17sp"></RadioButton>

        <RadioButton
            android:id="@+id/op4"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/exo2"
            android:text="Option 4"
            android:textColor="@color/black"
            android:textSize="17sp"></RadioButton>
    </RadioGroup>


    <Button
        android:id="@+id/btnQuitTN"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/tran_btn_solid"
        android:fontFamily="@font/poppins_semibold"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="THOÁT"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radiochoices"></Button>

    <Button
        android:id="@+id/btnconfirmTN"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/tran_btn_solid"
        android:fontFamily="@font/poppins_semibold"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="Tiếp"
        android:textColor="@color/black"
        app:backgroundTint="#6EE608"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radiochoices"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>