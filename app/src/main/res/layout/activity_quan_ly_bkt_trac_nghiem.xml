<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.KiemTra.QuanLyBKT_TracNghiem"
    android:background="@color/white">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_animation_view_nodata_TN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lottie_rawRes="@raw/nodata"
        android:layout_centerInParent="true"
        android:padding="30dp"/>

    <TextView
        android:id="@+id/textGioiThieu_TN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chưa thấy câu hỏi nào!!"
        android:gravity="center_horizontal"
        android:textSize="19sp"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/open_sans"
        android:textStyle="bold"
        android:layout_marginTop="-30dp"
        android:textAllCaps="true"
        android:layout_below="@+id/lottie_animation_view_nodata_TN"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý trắc nghiệm"
        android:gravity="center_horizontal"
        android:textSize="23sp"
        android:fontFamily="@font/sf_bold"
        android:textAllCaps="true"
        android:layout_below="@+id/back_TN"/>

    <ImageButton
        android:id="@+id/back_TN"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/tranpr"
        android:src="@drawable/baseline_arrow_back_ios_new_24" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_cauTN"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layoutAnimation="@anim/layout_anim_slide_from_bottom"
        android:layout_above="@+id/themTn"/>

    <ImageButton
        android:id="@+id/themTn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/baseline_add_24"
        android:background="@drawable/tranpr"/>


</RelativeLayout>