<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Admin.QuanLyNguoiDung">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý người dùng"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:fontFamily="@font/sf_bold"
        android:textAllCaps="true"
        android:layout_below="@+id/search_nguoidung_qlnd_admin"/>

    <ImageButton
        android:id="@+id/back_QLND_admin"
        android:layout_below="@+id/search_nguoidung_qlnd_admin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/tranpr"
        android:src="@drawable/baseline_arrow_back_ios_new_24" />

    <SearchView
        android:id="@+id/search_nguoidung_qlnd_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_allNguoiDung"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layoutAnimation="@anim/layout_anim_slide_from_bottom_recyclerview"/>

</RelativeLayout>