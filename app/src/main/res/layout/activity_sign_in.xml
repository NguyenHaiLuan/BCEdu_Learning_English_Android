<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.NguoiDung.SignIn"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/appbackground"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F8F8FF"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/modau"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="BCEDU"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="@color/xanhduong"
            android:fontFamily="@font/bungee"
            android:textSize="30sp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="40dp"
        android:layout_below="@id/modau"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:background="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/wctext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome!"
                android:gravity="center"
                android:textSize="25sp"
                android:fontFamily="@font/exo2_bold"
                android:layout_marginTop="30dp"/>

            <EditText
                android:id="@+id/emailLogin"
                android:layout_below="@+id/wctext"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:hint="Email"
                android:layout_marginStart="20dp"
                android:textSize="16sp"
                android:layout_marginEnd="20dp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="40dp"/>


            <EditText
                android:id="@+id/passwordLogin"
                android:layout_below="@+id/emailLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:hint="Mật khẩu"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:paddingRight="50dp"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"/>

            <ImageButton
                android:id="@+id/hienAnMatKhau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_lightbulb_24"
                android:background="@drawable/tran_btn_no_solid"
                android:layout_below="@+id/emailLogin"
                android:layout_marginTop="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="30dp"/>


            <Button
                android:id="@+id/quenMatKhauBtn"
                android:layout_below="@+id/passwordLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quên mật khẩu?"
                android:textColor="#46B795"
                android:background="@drawable/tran_btn_no_solid"
                android:layout_alignParentRight="true"/>

            <Button
                android:id="@+id/logInBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quenMatKhauBtn"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:text="Đăng nhập"
                android:textAllCaps="true"
                android:layout_marginTop="30dp"
                android:textColor="@color/xanhdam"
                android:backgroundTint="@color/xanhnhathon"/>

            <LinearLayout
                android:layout_below="@id/logInBtn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/line_or"
                    android:layout_below="@+id/logInBtn"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/line_or"
                    android:layout_below="@+id/logInBtn"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textHoac"
                android:layout_below="@+id/logInBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoặc"
                android:textSize="15sp"
                android:textColor="#46B795"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"/>

            <LinearLayout
                android:id="@+id/btnLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/textHoac"
                android:layout_marginTop="20dp"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="90dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/dangNhapGoogle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/google"
                    android:scaleType="fitCenter"
                    android:background="@drawable/tranpr"
                    android:padding="10dp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_below="@+id/btnLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/banChuaCoTaiKhoanTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn chưa có tài khoản?"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/chuyenDangKiBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng kí ngay!"
                    android:layout_marginLeft="6dp"
                    android:textColor="#46B795"
                    android:layout_toRightOf="@id/banChuaCoTaiKhoanTxt"/>

            </RelativeLayout>




        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>