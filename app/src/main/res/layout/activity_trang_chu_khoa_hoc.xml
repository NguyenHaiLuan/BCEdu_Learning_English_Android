<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.KhoaHoc.TrangChuKhoaHoc">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewThongTinKhoaHoc"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/xanhnhathon">

                    <ImageButton
                        android:id="@+id/backTCKH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="20dp"
                        android:background="@drawable/tran_btn_no_solid"
                        android:src="@drawable/baseline_arrow_back_ios_new_24" />

                    <TextView
                        android:id="@+id/tenGV_TCKH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/backTCKH"
                        android:fontFamily="@font/sf_semi_bold"
                        android:layout_centerVertical="true"
                        android:text="Nguyễn Thị Phúc Trường"
                        android:textColor="@color/xanhdam"
                        android:textSize="18sp"
                        android:layout_toLeftOf="@+id/hinhAo"/>

                    <ImageView
                        android:id="@+id/hinhAo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="30dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/xamnhat">

                    <TextView
                        android:id="@+id/tenKhoaHoc_TCKH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="30dp"
                        android:fontFamily="@font/sf_bold"
                        android:layout_centerVertical="true"
                        android:text="Khoá học của ben"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:layout_toLeftOf="@+id/hinhAo2"/>

                    <TextView
                        android:id="@+id/hinhAo2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:text="Trang chủ"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:fontFamily="@font/sf_bold"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="30dp"/>

                </RelativeLayout>
            </LinearLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/hinhKhoaHoc_TCKH"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/circle"
                app:srcCompat="@drawable/supermanavt"
                app:strokeColor="@color/xamnhat"
                app:strokeWidth="4dp" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cardViewThongTinKhoaHoc"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/xamnhat">

            <androidx.cardview.widget.CardView
                android:id="@+id/khoiNutLenh_ThemBaiKiemTra"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/kiemtra_relative">

                    <ImageButton
                        android:id="@+id/im1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:padding="12dp"
                        android:background="@drawable/tran_btn_no_solid"
                        android:src="@drawable/mortarboard"
                        app:tint="@color/xanhdam"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:id="@+id/tkt"
                        android:layout_toRightOf="@+id/im1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:padding="12dp"
                        android:background="@drawable/tran_btn_no_solid"
                        android:text="Kiểm tra"
                        android:fontFamily="@font/sf_bold"
                        android:textSize="17sp"
                        android:gravity="center"/>
                </RelativeLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/khoiNutLenh_lopHocOnline"
                android:layout_below="@+id/khoiNutLenh_ThemBaiKiemTra"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/lophoconl_relative">

                    <ImageButton
                        android:id="@+id/im2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:padding="12dp"
                        android:background="@drawable/tran_btn_no_solid"
                        android:src="@drawable/lesson"
                        app:tint="@color/xanhdam"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:layout_toRightOf="@+id/im2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:padding="12dp"
                        android:background="@drawable/tran_btn_no_solid"
                        android:text="Lớp học online"
                        android:fontFamily="@font/sf_bold"
                        android:textSize="17sp"
                        android:gravity="center"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>





</RelativeLayout>