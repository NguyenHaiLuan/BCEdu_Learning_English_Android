<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xanhnhathon"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Fragment.SpeakerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8sp"
        android:paddingHorizontal="10sp">

        <TextView
            android:id="@+id/tvMeetingId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="@font/sf_regular"
            android:text="Id Lớp học: "
            android:textColor="@color/xanhdam"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/copy_id_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_content_copy_24"
            android:background="@drawable/tran_btn_no_solid"
            android:padding="8dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp" />

        <Button
            android:id="@+id/btnLeave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tran_btn_solid"
            android:text="Rời lớp"
            android:textAllCaps="false"
            android:textColor="@color/xanhdam" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvHlsState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_regular"
        android:text="Trạng thái HSL hiện tại : NOT_STARTED"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvParticipants"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_marginVertical="10sp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:weightSum="5">

        <Button
            android:id="@+id/btnHLS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/tran_btn_solid"
            android:fontFamily="@font/sf_semi_bold"
            android:text="Start HLS"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/btnWebcam"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5sp"
            android:layout_weight="1"
            android:src="@drawable/baseline_videocam_24"
            android:background="@drawable/tran_btn_no_solid"/>

        <ImageButton
            android:id="@+id/btnMic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tran_btn_no_solid"
            android:src="@drawable/baseline_mic_24"/>
    </LinearLayout>


</LinearLayout>