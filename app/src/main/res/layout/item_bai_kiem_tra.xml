<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/tranpr">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.3"
                android:src="@drawable/bgkhoa"
                app:tint="#77000000" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/bgkhoa" />


        </RelativeLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/hinh_bai_kiem_tra"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:padding="15dp"
            android:src="@drawable/supermanavt"
            app:shapeAppearanceOverlay="@style/circle"
            app:strokeColor="@color/xanhdam"
            app:strokeWidth="2dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"/>


        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"
            android:id="@+id/khoiChinhSua"
            android:visibility="invisible">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.3"
                android:src="@drawable/bgright"
                app:tint="#77000000" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/bgright" />

            <ImageView
                android:id="@+id/chinhSuaBaiKT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/baseline_edit_24"
                app:tint="#F75F71" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/khoiTrangTri"
            android:visibility="invisible">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.3"
                android:src="@drawable/bgright"
                app:tint="#77000000" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/bgright" />

            <ImageView
                android:id="@+id/nutTrangTri_BKT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/baseline_insights_24"
                app:tint="#F75F71" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:id="@+id/khoiXoa"
            android:visibility="invisible">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.3"
                android:src="@drawable/bgright"
                app:tint="#77000000" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/bgright" />

            <ImageView
                android:id="@+id/xoaBaiKT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:src="@drawable/baseline_clear_24"
                app:tint="#F75F71" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tenBaiKiemTra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/hinh_bai_kiem_tra"
            android:fontFamily="@font/sf_bold"
            android:text="Kiểm tra 1 "
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/soCauHoiBaiKT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tenBaiKiemTra"
            android:layout_toRightOf="@+id/hinh_bai_kiem_tra"
            android:text="Trắc nghiệm"
            android:textColor="@color/xanhdam"
            android:textSize="13sp"
            android:textStyle="italic"
            android:fontFamily="@font/sf_regular"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/thoiLuongBaiKiemTra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/soCauHoiBaiKT"
            android:layout_toRightOf="@+id/hinh_bai_kiem_tra"
            android:text="Thời lượng: 69 phút"
            android:textColor="@color/xanhduong"
            android:textSize="13sp"
            android:textStyle="italic"
            android:fontFamily="@font/sf_regular"
            android:padding="5dp"/>
    </RelativeLayout>

</RelativeLayout>