<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tranpr">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.3"
                android:src="@drawable/bgkhoa"
                app:tint="#77000000" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/bgkhoa" />
        </RelativeLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/hinh_mota_khoa"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mortarboard"
            app:shapeAppearanceOverlay="@style/circle"
            app:strokeColor="#2196F3"
            app:strokeWidth="2dp" />


        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.3"
                android:src="@drawable/bgright"
                app:tint="#77000000" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/bgright" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/right"
                app:tint="#F75F71" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="105dp">

            <TextView
                android:id="@+id/ten_khoa_hoc_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:paddingBottom="5dp"
                android:text="Tên khoá học"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/giaovienkhoahoc"
                android:layout_below="@+id/ten_khoa_hoc_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:text="Giảng viên: "
                android:textColor="#676565"
                android:textSize="13sp"
                android:textStyle="italic"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/giaovienkhoahocToiTao"
                android:layout_below="@+id/ten_khoa_hoc_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:text="Giảng viên: Tôi"
                android:textColor="@color/xanhduong"
                android:textSize="13sp"
                android:textStyle="italic"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/daThamGiaTag_KH"
                android:layout_below="@+id/giaovienkhoahoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:text="Đã tham gia"
                android:textColor="@color/xanhduong"
                android:textSize="13sp"
                android:textStyle="italic|bold"
                android:layout_marginTop="3dp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
