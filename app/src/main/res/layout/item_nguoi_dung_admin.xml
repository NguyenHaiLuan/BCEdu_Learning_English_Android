<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/xamnhat">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/anhNguoiDung_admin"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="18dp"
                android:layout_marginTop="-5dp"
                app:shapeAppearanceOverlay="@style/circle"
                app:srcCompat="@drawable/supermanavt"
                app:strokeColor="#FFEB3B"
                app:strokeWidth="2dp"
                android:scaleType="centerCrop"
                android:layout_marginStart="15dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/anhRankNguoiDung_admin"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:padding="15dp"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/challenger"
                android:scaleType="fitXY"
                android:layout_marginStart="0dp"/>

            <TextView
                android:id="@+id/tenNguoiDung_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/anhNguoiDung_admin"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/sf_semi_bold"
                android:text="Tên học viên"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/tenrank_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/anhNguoiDung_admin"
                android:layout_below="@+id/tenNguoiDung_admin"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/sf_semi_bold"
                android:text="Tên bậc rank"
                android:textColor="#3F51B5"
                android:textSize="18sp"
                android:layout_marginRight="20dp"/>

            <ImageButton
                android:id="@+id/banNguoiDung_admin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/baseline_lock_person_24"
                android:background="@drawable/tran_btn_no_solid"/>
        </RelativeLayout>




    </androidx.cardview.widget.CardView>


</RelativeLayout>