<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/xamnhat">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/anhNguoiDung_bxh"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="18dp"
                android:layout_marginTop="-5dp"
                app:shapeAppearanceOverlay="@style/circle"
                app:srcCompat="@drawable/supermanavt"
                app:strokeColor="#FFEB3B"
                app:strokeWidth="2dp"
                android:scaleType="centerCrop"
                android:layout_marginStart="15dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/anhRankNguoiDung_bxh"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:padding="15dp"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/challenger"
                android:scaleType="fitXY"
                android:layout_marginStart="0dp"/>

            <TextView
                android:id="@+id/tenNguoiDung_bxh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/anhNguoiDung_bxh"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/sf_semi_bold"
                android:text="Tên học viên"
                android:textColor="@color/xanhdam"
                android:textSize="18sp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/tenrank_bxh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/anhNguoiDung_bxh"
                android:layout_below="@+id/tenNguoiDung_bxh"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/sf_semi_bold"
                android:text="Tên bậc rank"
                android:textColor="@color/lavender"
                android:textSize="16sp"
                android:layout_marginRight="5dp"/>
        </RelativeLayout>




    </androidx.cardview.widget.CardView>

</RelativeLayout>