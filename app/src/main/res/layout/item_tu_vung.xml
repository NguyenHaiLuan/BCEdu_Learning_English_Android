<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:clickable="true"
    app:cardCornerRadius="25dp"
    app:cardElevation="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginEnd="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/khoiHinhAnh"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                app:cardCornerRadius="15dp">

                <ImageView
                    app:shapeAppearanceOverlay="@style/circular"
                    android:id="@+id/hinh_mota_tuvung"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/testavt"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tenTuVung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/khoiHinhAnh"
                android:text="Từ Vựng"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/sf_bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/nghiaTuVung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/tenTuVung"
                android:text="Dịch Nghĩa"
                android:fontFamily="@font/sf_regular"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/phienAmTuVung"
                android:fontFamily="@font/sf_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phiên âm"
                android:layout_below="@id/nghiaTuVung"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#FF9800"
                android:textStyle="italic"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>