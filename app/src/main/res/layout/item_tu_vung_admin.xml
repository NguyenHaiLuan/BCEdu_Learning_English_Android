<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/xamnhat">

            <LinearLayout
                android:layout_toLeftOf="@+id/g"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/xamnhat"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tuVungAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Từ vựng"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:fontFamily="@font/sf_semi_bold"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/tuLoaiAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Từ loại"
                    android:textSize="16sp"
                    android:fontFamily="@font/sf_regular"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">

                <ImageButton
                    android:id="@+id/suaTuVung_admin"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/baseline_edit_24"
                    android:background="@drawable/tranpr"/>

                <ImageButton
                    android:id="@+id/xoaTuVung_admin"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/baseline_delete_24"
                    android:background="@drawable/tranpr"/>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>